<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/background_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_login"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="140dip"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="@drawable/bg_reg_login_icon"
            >

            <ImageView
                android:id="@+id/username_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/phone_normal"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/bg_reg_login_et"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="请输入账号"
                android:maxLength="11"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@android:color/white"
                android:textColorHint="@color/gray_666_color"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dip"
                android:src="@drawable/ic_clear_edit"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="@drawable/bg_reg_login_icon"
            >

            <ImageView
                android:id="@+id/password_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/psw_normal"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/bg_reg_login_et"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@android:color/white"
                android:textColorHint="@color/gray_666_color"
                android:textSize="14sp"
                />

            <CheckBox
                android:id="@+id/show_password_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_password_icon_eye_selector"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingTop="5dip"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_login_bg_selector"
        android:textColor="@color/btn_login_text_selector"
        android:enabled="false"
        android:text="登录"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        >

        <TextView
            android:id="@+id/login_regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="快速注册"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/login_resetpsw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="忘记密码？"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
    </RelativeLayout>

</LinearLayout>